<WelcomeScreen>
    label: label
    name: 'WelcomeScreen'

    Label:
        id: label
        text: "FIRSTNAME LASTNAME"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.6}
        font_size: '70sp'
        font_name: 'fonts/roboto/Roboto-Regular.ttf'

    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '30sp'
        pos: 0, 220
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        markup: True

    MDIconButton:
        icon: "basket"
        id: vmk
        markup: True
        text: 'KOOP'
        md_bg_color: app.theme_cls.green_button
        user_font_size: "64sp"
        pos_hint: {"center_x": 0.42,"center_y":0.35}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_buy()

    MDIconButton:
        id: stop
        icon: 'window-close'
        markup: True
        text: '[b]STOP[/b]'
        md_bg_color: app.theme_cls.red_button
        user_font_size: "64sp"
        size_hint: None, None
        pos_hint: {"center_x": 0.58,"center_y":0.35}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_cancel()

    MDFloatingActionButton:
        id: info
        icon: "information"
        pos_hint: {"center_x": 0.94,"center_y":0.07}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        size: 40, 40
        on_release: root.tap_target_start()