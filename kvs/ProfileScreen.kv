<ProfileScreen>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'

        MDToolbar:
            title: 'STELLA PAY'
            font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
            md_bg_color: 0.078, 0.537, 0.882, 1
            elevation: 10
            type: 'top'

    MDFillRoundFlatButton:
        width: dp(200)
        height: dp(45)
        id: stop
        markup: True
        text: '[b]TERUG[/b]'
        md_bg_color: 0.956, 0.6, 0.082, 1
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.91,"center_y":0.93}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_back()

    Label:
        id: username
        text: ""
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.77}
        font_size: '55sp'

    MDCard:
        id: coupled_carts
        size_hint: None, None
        size: "300dp", "300dp"
        pos_hint: {"center_x": .31, "center_y": .35}

        Label:
            pos_hint: {"center_x": .5, "center_y": 0.9}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 0
            text: "Gekoppelde NFC kaarten"

    MDCard:
        size_hint: None, None
        size: "300dp", "300dp"
        pos_hint: {"center_x": .69, "center_y": .35}

        Label:
            pos_hint: {"center_x": .5, "center_y": 0.9}
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 0
            text: "Statistieken"
