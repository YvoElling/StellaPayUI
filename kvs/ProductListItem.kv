<ProductListItem@@TwoLineAvatarIconListItem>
    MDIconButton:
        id: plus
        md_bg_color: app.theme_cls.green_button
        user_font_size: "25sp"
        icon: "plus"
        pos_hint: {"center_x": 0.9,"center_y":0.5}
        on_release: root.on_add_product()

    MDIconButton:
        id: minus
        user_font_size: "25sp"
        md_bg_color: app.theme_cls.red_button
        icon: "minus"
        pos_hint: {"center_x": 0.95,"center_y":0.5}
        on_release: root.on_remove_product()

    MDIconButton:
        id: other_user
        font_size: "10sp"
        md_bg_color: app.theme_cls.purple_button
        icon: "account-plus"
        pos_hint: {"center_x": 0.85,"center_y":0.5}
        on_release: root.on_select_purchaser()

    MDLabel:
        text: "0"
        id: count
        theme_text_color: "Custom"
        pos_hint: {"x": 0.015,"y":0}
        text_color: 1, 1, 1, 1
        font_size: '25sp'

    MDLabel:
        id: price
        text: "0.00"
        theme_text_color: "Custom"
        pos_hint: {"center_x": 1.1,"center_y":0.5}
        text_color: 1, 1, 1, 1
        font_size: '25sp'




