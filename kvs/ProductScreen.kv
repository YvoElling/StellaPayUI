<ProductScreen>
    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            id: toolbar
            title: 'Stella Pay'
            font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
            right_action_items: [["account-circle", lambda x: root.on_profile_screen()], ["close", lambda x: root.on_leave_product_screen_button()]]
            elevation: 10
            type: 'top'

        MDTabs:
            id: android_tabs
            tab_bar_height: '50dp'
            lock_swiping: True
#            anim_duration: 0.0
            text_color_normal: (0,0,0,1)
            text_color_active: (1,1,1,1)
            color_indicator: (0,0,0,1)

    MDFloatingActionButton:
        id: shopping_cart_button
        icon: "basket"
        md_bg_color: app.theme_cls.complementary_color_1
        pos_hint: {"center_x": 0.93,"center_y":0.1}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        size: (75, 75)
        on_release: root.show_shopping_cart()
        disabled: True
