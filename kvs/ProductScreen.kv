<ProductScreen>
    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: 'STELLA PAY'
            md_bg_color: 0.078, 0.537, 0.882, 1
            right_action_items: [["account", lambda x: app.callback()]]
            type: 'top'

        MDTabs:
            id: android_tabs
            on_tab_switch: root.on_tab_switch(*args)


    MDFillRoundFlatButton:
        width: dp(200)
        height: dp(45)
        id: stop
        markup: True
        text: '[b]STOP[/b]'
        md_bg_color: 0.933, 0.203, 0.125, 1
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.85,"center_y":0.93}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_cancel()

    MDFloatingActionButton:
        icon: "currency-eur"
        md_bg_color: 0.062, 0.898, 0.105, 1
        pos_hint: {"center_x": 0.91,"center_y":0.1}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        size: 80, 70

    MDFloatingActionButton:
        icon: "shopping"
        md_bg_color: 0.062, 0.898, 0.105, 1
        pos_hint: {"center_x": 0.09,"center_y":0.1}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        size: 80, 70
