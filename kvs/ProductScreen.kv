<ProductScreen>
    BoxLayout:
        orientation: "vertical"

        MDToolbar:
            title: 'STELLA PAY'
            font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
            right_action_items: [["account-circle", lambda x: root.on_profile_screen()]]
            elevation: 10
            type: 'top'

        MDTabs:
            id: android_tabs
            tab_bar_height: '35dp'
            on_tab_switch: root.on_tab_switch(*args)

    MDIconButton:
        id: stop
        icon: "logout-variant"
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.87,"center_y":0.935}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_leave_product_screen_button()

    MDFloatingActionButton:
        icon: "currency-eur"
        md_bg_color: app.theme_cls.complementary_color_2
        pos_hint: {"center_x": 0.93,"center_y":0.1}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        size: 70, 70
        on_release: root.open_payment_confirmation()

    MDFloatingActionButton:
        icon: "shopping"
        md_bg_color: app.theme_cls.complementary_color_1
        pos_hint: {"center_x": 0.07,"center_y":0.1}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        size: 70, 70
        on_release: root.show_shopping_cart()
