<CreditsScreen>:
    Label:
        id: epy_dsn
        text: "[b]EPYLOGUE DESIGN[/b]"
        font_size: '15sp'
        pos: 0, 220
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        pos_hint: {"center_x":0.5,"center_y":0.95}
        markup: True

    MDFillRoundFlatButton:
        width: dp(200)
        height: dp(45)
        id: stop
        markup: True
        text: '[b]STOP[/b]'
        md_bg_color: 0.933, 0.203, 0.125, 1
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.90,"center_y":0.93}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.clicked_stop_button()

    Label:
        id: label
        text: "STELLA PAY"
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.75}
        font_size: '65sp'

    MDCard:
        size_hint: None, None
        size: "460dp", "60dp"
        pos_hint: {"center_x": .5, "center_y": .6}

        Label:
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 0
            text: "Stella Pay is het nieuwe betaalsysteem van Solar Team Eindhoven.\n Dit systeem is in gebruik genomen voor '21 om de ouderwetse\n streeplijst te digitaliseren. "

    MDCard:
        size_hint: None, None
        size: "460dp", "60dp"
        pos_hint: {"center_x": .5, "center_y": .47}

        Label:
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 0
            text: "Het systeem is ontwikkeld in Python, met zowel Kivy(MD) als \n front-end als Django(database)."

    MDCard:
        size_hint: None, None
        size: "460dp", "60dp"
        pos_hint: {"center_x": .5, "center_y": .34}

        Label:
            halign: "center"
            theme_text_color: "Custom"
            text_color: 1, 1, 1, 0
            text: "Het systeem werkt op basis van geregistreerde NFC kaarten.\n Via je TU/e pas kan het systeem een aankoop op die manier aan\n jouw account koppelen."

    Label:
        id: vb
        text: "[b]VINCENT BOLTA[/b]"
        font_size: '15sp'
        pos: 0, 220
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        pos_hint: {"center_x":0.12,"center_y":0.06}
        markup: True

    Label:
        id: ye
        text: "[b]YVO ELLING[/b]"
        font_size: '15sp'
        pos: 0, 220
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        pos_hint: {"center_x":0.88,"center_y":0.06}
        markup: True