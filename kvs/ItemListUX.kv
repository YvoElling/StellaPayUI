<ItemListUX@@OneLineAvatarIconListItem>
    MDIconButton:
        id: plus
        md_bg_color: 0.062, 0.898, 0.105, 1
        user_font_size: "25sp"
        icon: "plus"
        pos_hint: {"center_x": 0.88,"center_y":0.5}
        on_release: root.on_add_product()

    MDIconButton:
        id: minus
        user_font_size: "25sp"
        md_bg_color: 0.933, 0.203, 0.125, 1
        icon: "minus"
        pos_hint: {"center_x": 0.95,"center_y":0.5}
        on_release: root.on_remove_product()

    MDFillRoundFlatIconButton:
        id: plus
        text: "[b]kies[/b]"
        font_size: "20sp"
        markup: True
        height: dp(45)
        md_bg_color: 0.062, 0.898, 0.105, 1
        user_font_size: "45sp"
        icon: "plus"
        pos_hint: {"center_x": 0.77,"center_y":0.5}
        #on_release: root.on_select_purchaser()

    MDLabel:
        text: "0"
        id: count
        theme_text_color: "Custom"
        pos_hint: {"center_x": 0.54,"center_y":0.5}
        text_color: 1, 1, 1, 1
        font_size: '25sp'

    MDLabel:
        id: price
        text: "0.00"
        theme_text_color: "Custom"
        pos_hint: {"center_x": 1.1,"center_y":0.5}
        text_color: 1, 1, 1, 1
        font_size: '25sp'




