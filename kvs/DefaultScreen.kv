# -*- coding: utf-8 -*-
<DefaultScreen>:
    name: 'DefaultScreen'
    
    MDIconButton:
        icon: 'img/STEmediumnobg.png'
        user_font_size: "450sp"
        size_hint: None, None
        pos_hint: {"center_x":0.27,"center_y":0.65}
        on_release: root.to_credits()

    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '53sp'
        pos_hint: {"center_x":0.27,"center_y":0.235}
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        markup: True

    MDIconButton:
        id: connection_state
        user_font_size: "25sp"
        md_bg_color: app.theme_cls.purple_button
        icon: "wifi-off"
        pos_hint: {"center_x": 0.13,"center_y":0.81}

    MDFillRoundFlatButton:
        text: "Selecteer gebruiker"
        font_size: '32sp'
        pos_hint: {"center_x":0.7,"center_y":0.78}
        size_hint: (0.3, 0.075) # Only increase size on Y part (because X part is done by KivyMD)
        text_color: 1, 1, 1, 1
        on_press: root.on_no_nfc()
        opacity: 0 if spinner.active else 1

    MDIconButton:
        icon: "account-clock"
        text: "test"
        user_font_size: "64sp"
        pos_hint: {"center_x":0.58,"center_y":0.275}
        on_press: root.on_select_guest()

    MDLabel:
        text: "Gasten"
        pos_hint: {"x":0.55,"center_y":0.2}
        font_style: "H6"
        theme_text_color: "Primary"

    MDIconButton:
        icon: "tools"
        user_font_size: "64sp"
        pos_hint: {"center_x":0.7,"center_y":0.275}
        on_press: root.on_select_onderhoud()

    MDLabel:
        text: "Onderhoud"
        pos_hint: {"x":0.665,"center_y":0.2}
        font_style: "H6"
        theme_text_color: "Primary"

    MDIconButton:
        icon: "account-supervisor-circle"
        user_font_size: "64sp"
        pos_hint: {"center_x":0.82,"center_y":0.275}
        on_press: root.on_select_beheer()

    MDLabel:
        text: "Beheer"
        pos_hint: {"x":0.795,"center_y":0.2}
        font_style: "H6"
        theme_text_color: "Primary"

    MDSpinner:
        id: spinner
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.25}
        active: False

    Label:
        id: copyright
        text: "Copyright Vincent Bolta & Yvo Elling \xa9 %year% - Started this instance on %date% (%connection_mode%)"
        font_size: '11sp'
        pos_hint: {"center_x":0.5,"center_y":0.02}



