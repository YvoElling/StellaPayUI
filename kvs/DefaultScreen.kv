# -*- coding: utf-8 -*-
<DefaultScreen>:
    name: 'DefaultScreen'
    
    MDIconButton:
        icon: 'img/STEmediumnobg.png'
        user_font_size: "450sp"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.7}
        on_release: root.to_credits()

    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '50sp'
        pos_hint: {"center_x":0.5,"center_y":0.375}
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        markup: True

    MDFillRoundFlatButton:
        text: "NFC kaart vergeten?"
        font_size: '35sp'
        pos_hint: {"center_x":0.5,"center_y":0.275}
        size_hint: (None, 0.075) # Only increase size on Y part (because X part is done by KivyMD)
        text_color: 1, 1, 1, 1
#        md_bg_color: 0.078, 0.537, 0.882, 1
        on_press: root.on_no_nfc()
        opacity: 0 if spinner.active else 1

    MDIconButton:
        icon: "account-clock"
        text: "test"
        user_font_size: "64sp"
        pos_hint: {"center_x":0.4,"center_y":0.15}
        on_press: root.on_select_guest()

    MDLabel:
        text: "Gasten"
        pos_hint: {"x":0.375,"center_y":0.09}
        font_style: "H6"
        theme_text_color: "Primary"

    MDIconButton:
        icon: "account-supervisor-circle"
        user_font_size: "64sp"
        pos_hint: {"center_x":0.5,"center_y":0.15}
        on_press: root.on_select_beheer()

    MDLabel:
        text: "Beheer"
        pos_hint: {"x":0.475,"center_y":0.09}
        font_style: "H6"
        theme_text_color: "Primary"

    MDIconButton:
        icon: "tools"
        user_font_size: "64sp"
        pos_hint: {"center_x":0.6,"center_y":0.15}
        on_press: root.on_select_onderhoud()

    MDLabel:
        text: "Onderhoud"
        pos_hint: {"x":0.565,"center_y":0.09}
        font_style: "H6"
        theme_text_color: "Primary"



    MDSpinner:
        id: spinner
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.25}
        active: False

    Label:
        id: copyright
        text: "Copyright Vincent Bolta & Yvo Elling \xa9 %year% - Started this instance on %date%"
        font_size: '11sp'
        pos_hint: {"center_x":0.5,"center_y":0.02}



