# -*- coding: utf-8 -*-
<DefaultScreen>:
    name: 'DefaultScreen'
    
    MDIconButton:
        icon: 'img/STEmediumnobg.png'
        user_font_size: "450sp"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.7}
        on_release: root.to_credits()

    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '50sp'
        pos_hint: {"center_x":0.5,"center_y":0.4}
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        markup: True

    MDFillRoundFlatButton:
        text: "NFC kaart vergeten?"
        font_size: '35sp'
        pos_hint: {"center_x":0.5,"center_y":0.25}
        size_hint: (None, 0.05) # Only increase size on Y part (because X part is done by KivyMD)
        text_color: 1, 1, 1, 1
#        md_bg_color: 0.078, 0.537, 0.882, 1
        on_press: root.on_no_nfc()
        opacity: 0 if spinner.active else 1

    MDSpinner:
        id: spinner
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.25}
        active: False

    Label:
        id: copyright
        text: "Copyright Vincent Bolta & Yvo Elling \xa9 2020"
        font_size: '11sp'
        pos_hint: {"center_x":0.5,"center_y":0.02}



