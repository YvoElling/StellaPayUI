# -*- coding: utf-8 -*-
<DefaultScreen>:
    name: 'DefaultScreen'
    
    MDIconButton:
        icon: 'img/STEmediumnobg.png'
        user_font_size: "195sp"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.7}
        on_release: root.to_credits()

    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '15sp'
        pos_hint: {"center_x":0.5,"center_y":0.47}
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        markup: True

    MDFillRoundFlatButton:
        text: "NFC kaart vergeten?"
        pos_hint: {"center_x":0.5,"center_y":0.25}
        text_color: 1, 1, 1, 1
        md_bg_color: 0.078, 0.537, 0.882, 1
        on_press: root.on_no_nfc()

    Label:
        id: copyright
        text: "Copyright Vincent Bolta & Yvo Elling \xa9 2020"
        font_size: '11sp'
        pos_hint: {"center_x":0.5,"center_y":0.02}



