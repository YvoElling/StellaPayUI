<VerticalButtonWithIcon@BoxLayout>:
    # Custom variables
    icon: ""
    label_text: ""
    pos_x: 0.0
    pos_y: 0.0

    orientation: "vertical"
    pos_hint: {"x": root.pos_x, "y": root.pos_y}
    size_hint_y: 0.2
    size_hint_x: 0.1

    MDIconButton:
        id: icon_of_button
        icon: root.icon
        icon_size: "64dp"
        pos_hint: {"center_x": .5}

    MDLabel:
        text: root.label_text
        font_style: "H6"
        halign: "center"
        theme_text_color: "Primary"