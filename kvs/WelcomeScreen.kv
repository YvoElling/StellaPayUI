<WelcomeScreen>
    label: label
    name: 'WelcomeScreen'

    Label:
        id: label
        text: "FIRSTNAME LASTNAME"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.52}
        font_size: '70sp'

    Label:
        id: hello
        markup: True
        text: "[b]Hallo[/b]"
        font_size: '20sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.5,"center_y":0.62}

    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '15sp'
        pos: 0, 220
        font_name: 'fonts/orbitron/Orbitron-Bold.ttf'
        markup: True

    MDFillRoundFlatIconButton:
        icon: "shopping"
        width: dp(110)
        height: dp(55)
        id: vmk
        markup: True
        text: '[b]KOOP[/b]'
        md_bg_color: 0.062, 0.898, 0.105, 1
        font_size: '25sp'
        pos_hint: {"center_x": 0.42,"center_y":0.35}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_buy()

    MDFillRoundFlatButton:
        width: dp(260)
        height: dp(55)
        id: stop
        markup: True
        text: '[b]STOP[/b]'
        md_bg_color: 0.933, 0.203, 0.125, 1
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.58,"center_y":0.35}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_cancel()

    MDFloatingActionButton:
        id: info
        icon: "information"
        pos_hint: {"center_x": 0.94,"center_y":0.07}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        size: 40, 40
        on_release: root.tap_target_start()