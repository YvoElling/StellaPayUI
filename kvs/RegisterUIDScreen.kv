<RegisterUIDScreen>
    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '15sp'
        pos: 0, 220
        font_name: 'Roboto-Bold'
        markup: True

    Label:
        id: nfc_unknown
        text: "NFC-kaart niet herkend"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.75}
        font_size: '45sp'

    Label:
        id: coupled
        text: "Is deze al gekopped?"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.65}
        font_size: '20sp'


#    Spinner:
#        id: user_spinner
#        size_hint: 0.45, 0.14
#        pos_hint: {'center_x': 0.33, 'center_y': 0.45}
#        text: 'Selecteer'
#        values: ''

    MDFillRoundFlatIconButton:
        icon: "plus"
        width: dp(260)
        height: dp(55)
        id: user_spinner
        markup: True
        text: '[b]KIES[/b]'
        md_bg_color: 0.396, 0.380, 0.364, 1
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {'center_x': 0.36, 'center_y': 0.45}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_select_mail()

    Label:
        id: selected_on_mail
        text: ""
        font_size: '20sp'
        markup: True
        pos_hint: {'center_x': 0.51, 'center_y': 0.35}


    MDFillRoundFlatButton:
        width: dp(110)
        height: dp(55)
        id: vmk
        markup: True
        text: '[b]Voeg toe[/b]'
        md_bg_color: 0.062, 0.898, 0.105, 1
        font_size: '25sp'
        pos_hint: {"center_x": 0.53,"center_y":0.45}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_save_user()

    MDFillRoundFlatButton:
        width: dp(260)
        height: dp(55)
        id: stop
        markup: True
        text: '[b]STOP[/b]'
        md_bg_color: 0.933, 0.203, 0.125, 1
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.68,"center_y":0.45}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_cancel()


    Label:
        id: warning
        text: "De NFC-chips in smartphones veranderen vaak van UID; wij raden daarom af om je telefoon te gebruiken"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.05}
        font_size: '16sp'
        color: 1, 0, 0, 1