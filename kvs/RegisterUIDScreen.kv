<RegisterUIDScreen>
    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '15sp'
        pos: 0, 220
        font_name: 'Roboto-Bold'
        markup: True

    Label:
        id: nfc_unknown
        text: "NFC-kaart niet herkend"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.75}
        font_size: '45sp'

    Label:
        id: coupled
        text: "Is deze al gekoppeld?"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.65}
        font_size: '20sp'

    MDFillRoundFlatIconButton:
        icon: "plus"
        width: dp(260)
        height: dp(55)
        id: user_spinner
        markup: True
        text: 'Selecteer kaarthouder'
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_click_user_list_button()

    Label:
        id: chosen_user
        text: ""
        font_size: '20sp'
        markup: True
        pos_hint: {'center_x': 0.51, 'center_y': 0.35}

    MDFillRoundFlatButton:
        width: dp(110)
        height: dp(55)
        id: vmk
        markup: True
        text: '[b]Voeg toe[/b]'
        md_bg_color: app.theme_cls.green_button
        font_size: '25sp'
        pos_hint: {"center_x": 0.42,"center_y":0.2}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_save_user()

    MDFillRoundFlatButton:
        width: dp(260)
        height: dp(55)
        id: stop
        markup: True
        text: '[b]STOP[/b]'
        md_bg_color: app.theme_cls.red_button
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.6,"center_y":0.2}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_cancel()


    Label:
        id: warning
        text: "De NFC-chips in smartphones veranderen vaak van id, gebruik dus niet je telefoon"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.05}
        font_size: '16sp'
        color: 1, 0, 0, 1