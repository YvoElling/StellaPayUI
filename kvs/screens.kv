<DefaultScreen>:
    name: 'DefaultScreen'
    
    Image:
        source: 'img/STEsmall.png'
        size: self.texture_size  
        
    Label:
        id: stella_pay
        text: "[b]STELLA PAY[/b]"
        font_size: '50sp'
        pos: 0, -250
        font_name: 'Roboto-Bold'
        markup: True

<WelcomeScreen>
    label: label
    name: 'WelcomeScreen'
        
    Label:
        id: label
        text: "FIRSTNAME LASTNAME"
        size_hint: None, None
        pos_hint: {"center_x":0.5,"center_y":0.52}
        font_size: '100sp'

    Label:
        id: hello
        markup: True
        text: "[b]Hallo[/b]"
        font_size: '40sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.5,"center_y":0.6}
        #pos: 0, 100

    Button:
        id: vmk
        markup: True
        text: '[b]Koop[/b]'
        background_normal: 'img/confirmButtonBackground.png'
        border: 30, 30, 30, 30
        font_size: '25sp'
        size_hint: None, None
        size: 200, 75
        pos_hint: {"center_x": 0.43,"center_y":0.4}
        pos_hint_x: root.center_x
        pos_hint_y: root.center_y
        on_release: root.on_buy()

    Button:
        id: stop
        text: '[b]Stop[/b]'
        markup: True
        background_normal: 'img/cancelButtonBackground.png'
        border: 30, 30, 30, 30
        font_size: '25sp'
        size_hint: None, None
        pos_hint: {"center_x": 0.57,"center_y":0.4}
        size: 200, 75
        font_size: '25sp'
        on_release: root.on_cancel()
    
<ProductScreen>
    Label:
        id: stella_pay
        text: '[b]STELLA PAY[/b]'
        markup: True
        size_hint: None, None
        pos_hint: {"center_x": 0.05,"center_y":0.95}
